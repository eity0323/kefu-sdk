<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_call_voice"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:background="@color/vm_theme_background"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_call_24dp"
            android:tint="@color/vm_green_87" />

        <TextView
            android:id="@+id/text_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通话时长"
            android:textColor="@color/vm_green_87"
            android:textSize="14dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_call_video"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"></RelativeLayout>
    <com.hyphenate.chat.CallSurfaceView
        android:id="@+id/call_surfaceview"
        android:layout_width="90dp"
        android:layout_height="120dp"

        android:gravity="center|center_horizontal|center_vertical"/>
</RelativeLayout>